{
  "manifest_version": 3,
  "name": "SizeShop",
  "version": "1.0.0",
  "description": "Web extension to help measure your clothing sizes while online shopping",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "SizeShop"
  },
  "options_page": "src/options/options.html"
}

